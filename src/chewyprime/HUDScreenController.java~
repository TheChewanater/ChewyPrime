package chewyprime;

import java.util.Properties;

import de.lessvoid.nifty.Nifty;
import de.lessvoid.nifty.screen.Screen;
import de.lessvoid.nifty.elements.Element;
import de.lessvoid.nifty.input.NiftyInputEvent;
import de.lessvoid.xml.xpp3.Attributes;


/**
 * Subclass of nifty.screen.ScreenController that controls the character's
 * actions and displays information HUD-style.
 *
 * @author Thomas Clark
 */
class HUDScreenController implements de.lessvoid.nifty.screen.ScreenController
{
  protected Nifty mNifty;
  
  public void bind(Nifty nifty, Screen screen)
  {
    mNifty = nifty;
    
    System.out.println("bind(" + screen.getScreenId() + ")");
  }
  
  public void onStartScreen()
  {
    System.out.println("onStartScreen()");
  }
  
  public void onEndScreen()
  {
    System.out.println("onEndScreen()");
  }
  
  public HUDScreenController()
  {
    System.out.println("HUDScreenController()");
  }
  
  public void quit()
  {
    System.out.println("quit");
    mNifty.gotoScreen("end");
  }
}

