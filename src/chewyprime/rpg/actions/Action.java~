package chewyprime.rpg.actions;

/**
 * Interface for combat actions such as attacking or using an item
 */
public interface Action
{
  public enum Type
  {
    Standard, Move, Immediate
  }
  
  public Type getType();
  
  public boolean canAct(chewyprime.rpg.Character user, chewyprime.rpg.Entity target);
  
  /**
   * Perform the action, returning nonzero for success.  This number usually
   * indicates the amount of damage dealt, if applicable.
   */
  public int act(chewyprime.rpg.Character user, chewyprime.rpg.Entity arget);
}
